<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hz="http://www.hazelcast.com/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.hazelcast.com/schema/spring
            http://www.hazelcast.com/schema/spring/hazelcast-spring-2.1.xsd">

    <!-- Hazelcast -->
    <hz:hazelcast id="hazelcastInstance">
        <hz:config>
            <hz:group name="${yard.hazelcast.group.name}" password="${yard.hazelcast.group.password}"/>
            <hz:properties>
                <hz:property name="hazelcast.merge.first.run.delay.seconds">5</hz:property>
                <hz:property name="hazelcast.merge.next.run.delay.seconds">5</hz:property>
            </hz:properties>
            <hz:network port="${yard.hazelcast.port}" port-auto-increment="${yard.hazelcast.port.autoincrement}">
                <hz:join>
                    <hz:multicast enabled="false" multicast-group="224.2.2.3" multicast-port="54327"/>
                    <hz:tcp-ip enabled="true">
                        <hz:members>${yard.hazelcast.members}</hz:members>
                    </hz:tcp-ip>
                </hz:join>
                <hz:interfaces>
                    <hz:interface>${yard.hazelcast.interface}</hz:interface>
                </hz:interfaces>
            </hz:network>

            <hz:map name="startFinishRepo" time-to-live-seconds="${yard.hazelcast.ttl.sec}"
                    max-idle-seconds="${yard.hazelcast.ttl.sec}"/>
        </hz:config>
    </hz:hazelcast>
</beans>
